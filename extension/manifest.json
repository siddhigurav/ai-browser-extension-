{
  "manifest_version": 3,
  "name": "AI Assistant",
  "version": "1.0",
  "description": "An AI assistant embedded in a browser extension with summarization, code explanation, and chat capabilities.",
  "permissions": [
    "tabs",
    "scripting",
    "storage",
    "notifications",
    "downloads",
    "contextMenus"
  ],
  "host_permissions": [
    "<all_urls>",
    "http://localhost:5000/*",
    "https://openrouter.ai/*",
    "https://api.whois.vu/*",
    "https://www.whoiis.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "api/*", 
        "options/*", 
        "dev_token.txt", 
        "libs/**/*", 
        "sidebar/**/*", 
        "test_*",
        "contentScript.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "options_page": "options/options.html",
  "action": {
    "default_title": "AI Assistant",
    "default_popup": "popup.html"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+S"
      },
      "description": "Toggle AI Assistant Sidebar"
    }
  }
}