{
  "manifest_version": 3,
  "name": "AI Assistant",
  "version": "1.0",
  "description": "An AI assistant embedded in a browser extension with summarization, code explanation, and chat capabilities.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "unlimitedStorage"
  ],
  "host_permissions": [
    "<all_urls>",
    "http://localhost:5000/*"
  ],
  "background": {
    "service_worker": "background/serviceWorker.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/contentScript.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["public/icons/*", "sidebar/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_popup": "sidebar/index.html"
  }
}